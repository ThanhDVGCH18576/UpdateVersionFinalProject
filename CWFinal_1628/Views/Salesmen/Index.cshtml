@model IEnumerable<CWFinal_1628.Models.Salesman>

@{
    ViewBag.Title = "Index";
}

<style>
    .mid {
        text-align: center;
    }
</style>
<h2 class="mid">Salesmans Management</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = " btn  btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List all Salesmans</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="alert-info">
                    <tr class="text-center">

                        <th>
                            Full Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>Image</th>
                        <th class="mid">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td class="text-center">
                                <img class="img-profile rounded" src="@item.Image.Substring(1,item.Image.Length - 1)" height="110" width="110" />
                            </td>
                            <td class="mid">
                                <a href="@Url.Action("Edit", "Salesmen", new { id = item.ID })">
                                    <i class="fas fa-edit btn btn-primary btn-sm"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Salesman", new { id = item.ID })">
                                    <i class="fas fa-trash-alt btn btn-danger btn-sm"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
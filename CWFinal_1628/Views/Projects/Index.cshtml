@model IEnumerable<CWFinal_1628.Models.Project>

@{
    ViewBag.Title = "Index";
}
<style>
    .mid {
        text-align: center;
    }
</style>
<h2 class="mid">Project management</h2>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List all Projects</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="alert-info">
                    <tr>
                        <th class="mid">
                            Investor
                        </th>
                        <th class="mid">
                            Salesman
                        </th>
                        <th class="mid">
                            @Html.DisplayNameFor(model => model.ProjectName)
                        </th>
                        <th class="mid">
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th class="mid">
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th class="mid">
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th class="mid">
                            Types Project
                        </th>
                        <th class="mid">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Investor.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salesman.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeProject)
                            </td>
                            <td class="mid">
                                <a href="@Url.Action("Edit", "Projects", new { id = item.ProjetcID })">
                                    <i class="fas fa-edit btn btn-primary btn-sm"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Projects", new { id = item.ProjetcID })">
                                    <i class="fas fa-trash-alt btn btn-danger btn-sm"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>